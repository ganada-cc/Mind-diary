<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link href="/css/calendar/calendar.css" rel="stylesheet">
  <link href="/css/calendar/calendar_check.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
  <script>
    // DOM 요소 가져오기
    const otherLinks = document.getElementsByClassName("nav-link");
    const mindLinks = document.getElementsByClassName("mindactive"); 
  
    // 마음일기 링크에 active 클래스 추가, 다른 링크에서 active 클래스 제거 
    for (const link of otherLinks) {
      link.classList.remove("active");
    }
  
    for (const link of mindLinks) { 
      link.classList.add("active");
    }
      // DOM 요소 가져오기
    const otherMLinks = document.getElementsByClassName("nav-linkM");
    const mindMLinks = document.getElementsByClassName("alarmactiveM"); 
  
    // 마음일기 링크에 active 클래스 추가, 다른 링크에서 active 클래스 제거 
    for (const link of otherMLinks) {
      link.classList.remove("activeM");
    }
  
    for (const link of mindMLinks) { 
      link.classList.add("activeM");
    }
  </script>
<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">

  <div class="container1">
    <div class="row">
      <!-- <div id="cal_main" class="col-lg-5 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center"> -->
        <!-- ======= calendar ======= -->
        <table class="scriptCalendar">
          <thead>
            <tr>
              <td onClick="prevCalendar();" style="cursor:pointer;">&#60;&#60;</td>
              <td colspan="5">
                <span id="calYear">YYYY</span>년
                <span id="calMonth">MM</span>월
              </td>
              <td onClick="nextCalendar();" style="cursor:pointer;">&#62;&#62;</td>
            </tr>
            <tr>
              <td>일</td>
              <td>월</td>
              <td>화</td>
              <td>수</td>
              <td>목</td>
              <td>금</td>
              <td>토</td>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>

      <!-- ======= symptom_check ======= -->
      <div class="col-lg-7 pt-lg-0 order-2 order-lg-1">
        <form action="/calendar" method="post" id="calendarForm">
          <script>
            const queryString = window.location.search;
            const form = document.getElementById('calendarForm');
            form.action += queryString;
          </script>
                <div class="date">
                    <p id="selected_date" style="display: none;"></p>
                  </div>
                </div>

                <div class="sleeping-time">
                  <input type="hidden" id="sleeping_time" name="sleep_time" value="">
                  <% if (
                    typeof calendarDataResult !== 'undefined' &&
                    calendarDataResult &&
                    typeof calendarDataResult.calendar !== 'undefined' &&
                    calendarDataResult.calendar &&
                    typeof calendarDataResult.calendar.sleep_time !== 'undefined'
                  ) { %>
                    <script>
                      const sleepTime = <%= calendarDataResult.calendar.sleep_time %>;
                      document.getElementById('sleeping_time').value = sleepTime;
                    </script>
                  <% } %>
                </div>
        </form>
      </div>
    </div>
  </div>
</section><!-- End Hero -->

<%- include('calendar_memory.ejs', { 
  image_url: image_url, 
  MindDiaryDataResult: MindDiaryDataResult 
}) %>
